#stuffSearch{background-image:url(http://search.usyd.edu.au/graphics/usyd/staff_search_bg.jpg); background-repeat:no-repeat; height:31px; width:163px; vertical-align:middle; padding-top:7px; margin-top:0px;}
#stuffSearch a{vertical-align:middle; margin-left:30px; font-weight:bold; color:#F1C001; text-decoration:none; }

